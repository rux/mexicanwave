<?xml version="1.0" encoding="UTF-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >
    
    <PreferenceCategory 
        android:title="Crowd size">
        <ListPreference 
            android:title="Wave size"
            android:summary="Depending on how many people you are with, the wave should move at different
                speeds better suited to the group.  Pick where you are to get a sensibly-paced wave"
            android:key="pref_wave_duration"
            android:entries="@array/pref_wave_duration_entries"
            android:entryValues="@array/pref_wave_duration_values"
            android:defaultValue="7.5"
            />
        
    </PreferenceCategory>    

    
    <PreferenceCategory 
        android:title="Game mode">

		<CheckBoxPreference 
            android:title="The idea is to 'catch' the wave as it goes past you, but if you'd prefer it to
            	just light up whether you tap the screen or not, you can choose to untick this box"
            android:key="pref_game"
            android:defaultValue=true/>
        
    </PreferenceCategory>    
    
    
    <PreferenceCategory 
        android:title="Light and Sound">
        <ListPreference 
            android:title="Favourite Color"
            android:summary="Choose your favourite colour for the wave flash on your screen"
            android:key="pref_coloring"
            android:entries="@array/pref_color_entries"
            android:entryValues="@array/pref_color_values"
            android:defaultValue="#FFFFFFFF"/>

		<CheckBoxPreference 
            android:title="Sound effects"
            android:key="pref_sound"
            android:defaultValue="false"/>
		
		<CheckBoxPreference 
            android:title="Vibration"
            android:key="pref_vibration"
            android:defaultValue="true"/>
	</PreferenceCategory>
</PreferenceScreen>